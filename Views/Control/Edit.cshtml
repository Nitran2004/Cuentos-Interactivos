@model SecureAssetManager.Models.Control

@{
    ViewData["Title"] = "Jurasico";
}

<h2>@ViewData["Title"]</h2>


<div id="container">
    <div id="left-side" class="text-center">
        <img src="~/images/nido.jpg" alt="Imagen de dinosaurio" class="img-fluid" style="max-width: 300px; margin: 0 auto;" />
    </div>
    <div id="right-side">
        <p>
